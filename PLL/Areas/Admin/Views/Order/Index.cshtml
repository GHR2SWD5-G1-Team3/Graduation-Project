@model IEnumerable<BLL.ModelVM.Order.DisplayOrderVM>

<div class="card">
    <div class="card-header">
        <div class="d-flex align-items-center">
            <h4 class="card-title">All Orders</h4>
          
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="add-row" class="display table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Order ID</th>
                        <th>User</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th style="width: 15%">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        int index = 1;
                        foreach (var order in Model)
                        {
                            <tr>
                                <td class="align-middle">@index</td>
                                <td class="align-middle">@order.Id</td>
                                <td class="align-middle">@order.UserEmail</td>
                                <td class="align-middle">@order.TotalPrice.ToString("C")</td>
                                <td class="align-middle">@order.Status.ToString()</td>
                                <td class="align-middle">@order.CreatedDate.ToString("g")</td>
                                <td class="align-middle">
                                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">
                                        <i class="fa fa-eye"></i> View Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning btn-sm">
                                        <i class="fa fa-edit"></i> Edit
                                    </a>
                                    <a href="javascript:void(0)" class="btn btn-danger btn-sm" onclick="deleteOrder(@order.Id)">
                                        <i class="fa fa-times"></i> Delete
                                    </a>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No orders found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function deleteOrder(orderId) {
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                // Make an AJAX request to delete the order
                $.ajax({
                    url: '@Url.Action("Delete", "Order")/' + orderId,
                    type: 'POST',
                    success: function () {
                        Swal.fire(
                            'Deleted!',
                            'Your order has been deleted.',
                            'success'
                        ).then(() => {
                            location.reload(); // Reload the page after successful deletion
                        });
                    },
                    error: function () {
                        Swal.fire(
                            'Error!',
                            'There was an issue deleting the order.',
                            'error'
                        );
                    }
                });
            }
        });
    }
</script>

@model BLL.ModelVM.Order.DisplayOrderVM

<div class="card">
    <div class="card-header">
        <div class="d-flex align-items-center">
            <h4 class="card-title">Order Details</h4>
            <a asp-action="Index" class="btn btn-secondary btn-round ms-auto">
                <i class="fa fa-arrow-left"></i> Back to Orders
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5>Order ID: @Model.Id</h5>
                <p><strong>User:</strong> @Model.UserEmail</p>
                <p><strong>Total Price:</strong> @Model.TotalPrice.ToString("C")</p>
                <p><strong>Status:</strong> @Model.Status.ToString()</p>
                <p><strong>Created Date:</strong> @Model.CreatedDate.ToString("g")</p>
            </div>
            <div class="col-md-6">
                <h5>Shipping Information</h5>
                <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                <p><strong>City:</strong> @Model.City</p>
                <p><strong>Street:</strong> @Model.Street</p>
                <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
            </div>
        </div>

        <div class="table-responsive">
            <table id="order-details" class="display table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderDetail in Model.OrderDetails)
                    {
                        <tr>
                            <td>@orderDetail.Name</td>
                            <td>@orderDetail.Quantity</td>
                            <td>@orderDetail.UnitPrice.ToString("C")</td>
                            <td>@(orderDetail.Quantity * orderDetail.UnitPrice).ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

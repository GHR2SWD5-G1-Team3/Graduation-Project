@model AddNewUserVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">@SharedLocalizer["Register"]:</div>
                    </div>
                    <form asp-controller="Customer" asp-action="Create" enctype="multipart/form-data" method="post">
                        <div class="card-body">
                            @if (ViewBag.Massege != null)
                            {
                                <div class="card">
                                    <div class="card-body">
                                        @ViewBag.Massege
                                    </div>
                                </div>
                            }
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" value="Customer" asp-for="RoleName" class="form-control" hidden />
                                    <div class="form-group">
                                        <label>@SharedLocalizer["FirstName"]:</label>
                                        <input type="text" placeholder="@SharedLocalizer["fnameplace"]" asp-for="FirstName" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>@SharedLocalizer["LastName"]:</label>
                                        <input type="text" placeholder="@SharedLocalizer["fnameplace"]" asp-for="LastName" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>@SharedLocalizer["UserName"]:</label>
                                        <input type="text" placeholder="@SharedLocalizer["UserNamePlace"]" asp-for="UserName" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>@SharedLocalizer["Email"]:</label>
                                        <input type="email" placeholder="@SharedLocalizer["EmailPlace"]" asp-for="Email" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>@SharedLocalizer["phone"]:</label>
                                        <input type="tel" placeholder="@SharedLocalizer["phoneplace"]" asp-for="Phone" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        <label>@SharedLocalizer["city"]:</label>
                                        <input type="text" placeholder="@SharedLocalizer["cityplace"]" asp-for="City" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>@SharedLocalizer["government"]:</label>
                                        <input type="text" placeholder="@SharedLocalizer["governmentplace"]" asp-for="Government" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>@SharedLocalizer["Password"]:</label>
                                        <input type="password" placeholder="@SharedLocalizer["PasswordPlace"]" asp-for="Password" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>@SharedLocalizer["userimage"]:</label>
                                        <input type="file" asp-for="UploadImage" class="form-control" />
                                    </div>
                                    <div class="card-action">
                                        <input type="submit" value="@SharedLocalizer["Register"]" class="btn btn-success">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


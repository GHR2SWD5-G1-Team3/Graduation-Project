@model CreateCouponVM
@{

    ViewData["Title"] = "Create Coupon";
}
<div class="container">
    <div class="card card-primary card-outline mb-4 mt-4">
        <!--begin::Header-->
        <div class="card-header"><div class="card-title">Create A New Coupon</div></div>
        <!--end::Header-->
        <!--begin::Form-->
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <!--begin::Body-->
            <div class="card-body">
                <div class="form-group">
                    <label>Code</label>
                    <input asp-for="Code" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Discount (%)</label>
                    <input asp-for="Discount" type="number" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Expiry Date</label>
                    <input asp-for="ExpiredAt" type="date" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Usage Limit</label>
                    <input asp-for="UsageLimit" type="number" class="form-control" />
                </div>
            <!--end::Body-->
            <!--begin::Footer-->
            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-lg">Create</button>
            </div>
            <!--end::Footer-->
        </form>
        <!--end::Form-->
    </div>
</div>
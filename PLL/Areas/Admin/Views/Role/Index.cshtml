@model List<DisplayRoleVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="page-inner">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Roles</h4>
                        <a class="btn btn-primary btn-round ms-auto" asp-action="Create" asp-controller="Role" asp-area="Admin">
                            <i class="fa fa-plus"></i>
                            Add Role
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="add-row"
                               class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Role Name</th>
                                    <th style="width: 10%">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var roleVm in Model)
                                    {
                                        <tr>
                                            <td>@roleVm.Name</td>
                                            <td>
                                                <div class="form-button-action">
                                                    <a href="javascript:void(0)" class="btn btn-danger btn-sm" onclick="deleteRole('@roleVm.Id')"><i class="fa fa-times"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.AntiForgeryToken() 

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function deleteRole(roleId) {
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("Delete", "Role")' + '?roleid=' + roleId,
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function () {
                        Swal.fire(
                            'Deleted!',
                            'The role has been deleted successfully.',
                            'success'
                        ).then(() => {
                            location.reload();
                        });
                    },
                    error: function () {
                        Swal.fire(
                            'Error!',
                            'There was an issue deleting the role.',
                            'error'
                        );
                    }
                });
            }
        });
    }
</script>
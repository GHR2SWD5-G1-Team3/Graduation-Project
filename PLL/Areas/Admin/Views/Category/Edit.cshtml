@using BLL.ModelVM.Category
@model CategoryVM

<!-- Main Content -->
<main class="pt-16 pl-0 md:pl-35 mt-5">
    <!-- Add padding-top for navbar and padding-left for sidebar -->
    <div class="container p-4 mt-5">
        <div class="row justify-content-center mt-5">
            <div class="col-md-8 col-lg-6 mt-5">
                <div class="card shadow-sm">
                    <div class="card-header bg-light text-dark">
                        <h3 class="card-title mb-0">Edit </h3>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert  bg-red-500 text-red ml-2" role="alert">
                                @ViewBag.Message!
                            </div>
                        }
                        else
                        {
                            <form asp-action="Edit" asp-controller="Category" method="post" enctype="multipart/form-data" id="form">

                                <!-- Name -->
                                <div class="mb-3">
                                    <label class="form-label">Name</label>
                                    <input type="text" asp-for="Name" class="form-control" placeholder="Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <!-- Description -->
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <input type="text" asp-for="Description" class="form-control" placeholder="Description" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <!-- Image -->
                                <div class="mb-3">
                                    <label asp-for="ImagePath" class="form-label">New Photo</label>
                                    <input type="file" asp-for="ImagePath" class="form-control" name="ImagePath" />
                                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                                    @if (!string.IsNullOrEmpty(Model?.ExistingImagePath))
                                    {
                                        <div class="mt-2">
                                            <label class="form-label">Current Photo:</label>
                                            <div>
                                                <img src="@Url.Content(Model.ExistingImagePath)" class="img-thumbnail" width="100"
                                                     onerror="this.style.display='none'" />
                                            </div>
                                        </div>
                                    }
                                </div>
                                <!-- Submit Button -->
                                <div class="mb-3">
                                    <button type="submit" class="btn btn-primary w-100">Update</button>
                                </div>
                            </form>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <partial name="_ValidationScriptsPartial" />
    }
</main>

<!-- Bootstrap JS (Optional, for interactive components) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

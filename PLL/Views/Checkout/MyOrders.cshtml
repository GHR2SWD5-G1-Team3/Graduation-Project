@using BLL.ModelVM.Order
@model IEnumerable<DisplayOrderVM>
@{
    ViewBag.Title = "My Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="m-4 pt-5">My Orders</h2>

@if (!Model.Any())
{
    <p class="mt-4 p-2">You haven't placed any orders yet.</p>
}
else
{
    foreach (var order in Model)
    {
        <div class="card p-3 mb-4 shadow-sm">
            <h5 class="mb-2">Order #@order.Id - @order.Status</h5>
            <p><strong>Date:</strong> @order.CreatedAt.ToString("dd MMM yyyy")</p>
            <p><strong>Total Amount:</strong> @order.Subtotal.ToString("C")</p>
            <a class="btn btn-outline-primary" asp-action="Details" asp-controller="Checkout" asp-route-id=@order.Id>View Details</a>
        </div>
    }
}

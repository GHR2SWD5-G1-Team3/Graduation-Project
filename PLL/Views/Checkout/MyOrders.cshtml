@using BLL.ModelVM.Order
@model IEnumerable<DisplayOrderVM>
@{
    ViewBag.Title = "My Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">My Orders</h2>

@if (!Model.Any())
{
    <p>You haven't placed any orders yet.</p>
}
else
{
    foreach (var order in Model)
    {
        <div class="card p-3 mb-4 shadow-sm">
            <h5 class="mb-2">Order #@order.Id - @order.Status</h5>
            <p><strong>Date:</strong> @order.CreatedDate.ToString("dd MMM yyyy")</p>
            <p><strong>Total Amount:</strong> @order.Subtotal.ToString("C")</p>
            <a class="btn btn-outline-primary" href="@Url.Action("Details", "Order", new { id = order.Id })">View Details</a>
        </div>
    }
}

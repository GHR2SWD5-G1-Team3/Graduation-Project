@model PLL.Models.ReviewViewModel
@{
    ViewData["Title"] = "Edit Review";
}

<h2>Edit Review</h2>

<form asp-action="EditReview" method="post">
    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" class="form-control" required></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rate"></label>
        <input asp-for="Rate" type="number" class="form-control" min="1" max="5" required />
        <span asp-validation-for="Rate" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="Id" /> <!-- Hidden input for the review's Id -->

    <button type="submit" class="btn btn-primary">Update Review</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

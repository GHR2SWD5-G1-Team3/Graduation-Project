@model PLL.Models.ReviewViewModel
@{
    ViewData["Title"] = "Delete Review";
}

<h2>Delete Review</h2>

<p>Are you sure you want to delete this review?</p>

<div>
    <strong>Comment:</strong> @Model.Comment
    <br />
    <strong>Rate:</strong> @Model.Rate
</div>

<form asp-action="DeleteReview" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger">Delete Review</button>
    <a href="@Url.Action("ProductReviews", "Review", new { productId = Model.ProductId })" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

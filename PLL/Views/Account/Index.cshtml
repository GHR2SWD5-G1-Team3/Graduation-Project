@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <style>
        .profile-image {
            width: 160px;
            height: 160px;
            object-fit: cover;
            border-radius: 50%;
        }

        .divider {
            border-bottom: 1px solid #cbc4c4;
            margin: 20px 0;
        }

        .tool-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .section-title {
            font-weight: bold;
            font-size: 1.5rem;
            margin-top: 40px;
        }
    </style>
</head>
<body>
    <div class="container text-center py-5">
        <!-- User Info -->
        <div>
            <img src="user.jpg" alt="User" class="profile-image mb-3" />
            <h3>Mohamed Ahmed</h3>
            <p class="text-muted">Cairo, Egypt | Tanta University</p>

            <!-- Section tabs (just labels here) -->
            <div class="d-flex justify-content-center mb-3">
                <span class="mx-3">My Adds</span>
                <span class="mx-3">Favorites</span>
            </div>

            <button class="btn btn-primary px-4">Add Item</button>
        </div>

        <!-- My Adds -->
        <div class="section-title text-start">My Tools</div>
        <div class="row g-3">
            <div class="col-md-4">
                <div class="card tool-card">
                    <img src="tool.jpg" alt="Tool" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Tool Title</h5>
                        <p class="card-text text-muted">Brief description of the tool.</p>
                    </div>
                </div>
            </div>
            <!-- Add more tools as needed -->
        </div>

        <!-- Favorites -->
        <div class="section-title text-start">Favorites</div>
        <div class="row g-3">
            <div class="col-md-4">
                <div class="card tool-card">
                    <img src="tool.jpg" alt="Favorite Tool" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Favorite Tool</h5>
                        <p class="card-text text-muted">Description of a favorite item.</p>
                    </div>
                </div>
            </div>
            <!-- Add more favorites as needed -->
        </div>
    </div>
</body>
</html>

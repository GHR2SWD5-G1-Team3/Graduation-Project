                                            <i class="fa fa-star"></i> *@
                                        </div>
                                    </div>

                                    <input type="submit" value="Post Comment" class="btn border border-secondary text-primary rounded-pill px-4 py-3"/>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 col-xl-3">
                <div class="row g-4 fruite">
                    <!-- Banner Image -->
                    <div class="col-lg-12 mb-4">
                        <div class="position-relative">
                            <img src="~/img/banner-fruits.jpg" class="img-fluid w-100 rounded" alt="">
                            <div class="position-absolute" style="top: 50%; right: 10px; transform: translateY(-50%);">
                                <h3 class="text-secondary fw-bold">Fresh <br> Fruits <br> Banner</h3>
                            </div>
                        </div>
                    </div>

                    <!-- Related Products -->
                    <div class="col-lg-12">
                        <h5 class="fw-bold mb-3">Related Products</h5>
                        <div class="row g-3">
                            @if (ViewBag.RelatedProducts.Count > 0)
                            {
                                foreach (var item in ViewBag.RelatedProducts as List<RealtedProductsVM>)
                                {
                                    <div class="col-12">
                                        <div class="border border-primary rounded vesitable-item p-2 mb-2">
                                            <div class="d-flex">
                                                <img src="~/img/Products/@item.ImageUrl" class="img-fluid rounded me-2" style="width: 80px; height: 80px; object-fit: cover;" alt="@item.Name">
                                                <div>
                                                    <h6 class="mb-1">@item.Name</h6>
                                                    <p class="mb-1 small text-muted">@item.SubCategoryName</p>
                                                    <span class="text-primary fw-bold">@item.Price.ToString("C")</span>
                                                    <br />
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= item.ReviewRate)
                                                        {
                                                            <i class="fa fa-star text-secondary"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="fa fa-star text-muted"></i>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">No related products found.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

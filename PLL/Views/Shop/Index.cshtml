   <script>
    // Focus function (kept from your original code)
    function focusSearchInput() {
      const searchInput = document.getElementById('searchInput');
      searchInput.focus();
      searchInput.classList.add('focused');
    }

    // Main search function
    function filterProducts() {
        const input = document.getElementById('searchInput').value.toLowerCase();
        const productCards = document.querySelectorAll('.fruite-item');
        let hasResults = false;
        
        productCards.forEach(function(card) {
            const productName = card.querySelector('h4').textContent.toLowerCase();
            const productDescription = card.querySelector('p').textContent.toLowerCase();
            const productCategory = card.querySelector('.text-white').textContent.toLowerCase();
            
            const parentCol = card.closest('.col-md-6');
            
            if (input === '' || 
                productName.includes(input) || 
                productDescription.includes(input) || 
                productCategory.includes(input)) {
                parentCol.style.display = '';
                hasResults = true;
            } else {
                parentCol.style.display = 'none';
            }
        });
        
        // Handle no results message
        const resultsContainer = document.querySelector('#tab-1 .row.g-4');
        let noResultsMsg = resultsContainer.querySelector('.no-results-message');
        
        if (!hasResults && input.length > 0) {
            if (!noResultsMsg) {
                noResultsMsg = document.createElement('div');
                noResultsMsg.className = 'col-12 no-results-message text-center py-5';
                noResultsMsg.innerHTML = '<h4 class="text-muted">No products found matching "' + input + '"</h4>';
                resultsContainer.appendChild(noResultsMsg);
            }
        } else if (noResultsMsg) {
            noResultsMsg.remove();
        }
    }
    
    // Initialize all search functionality
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        
        // Original blur handler (kept from your code)
        searchInput.addEventListener('blur', () => {
            searchInput.classList.remove('focused');
        });
        
        // Search as you type
        searchInput.addEventListener('input', filterProducts);
        
        // Search on Enter key
        searchInput.addEventListener('keydown', function(e) {
            if (e.key === 'Enter') {
                filterProducts();
            }
        });
        
        // Optional: Clear search when switching tabs
        document.querySelectorAll('.nav-link[data-bs-toggle="pill"]').forEach(tab => {
            tab.addEventListener('shown.bs.tab', function() {
                searchInput.value = '';
                filterProducts();
            });
        });
    });
</script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.favourite-btn').forEach(btn => {
        // Check initial state from server if needed
        btn.addEventListener('click', function (e) {
            e.stopPropagation();
            e.preventDefault();

            this.classList.toggle('active');

            const icon = this.querySelector('i');
            icon.classList.toggle('fa-solid');
            icon.classList.toggle('fa-regular');

            const productId = this.getAttribute('data-product-id');
            fetch(`/Favorite/Toggle?productId=${productId}`, { method: 'POST' });
        });
    });

        document.querySelectorAll('.card-clickable').forEach(card => {
            card.addEventListener('click', function () {

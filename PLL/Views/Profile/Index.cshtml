@model DisplayUser
@inject UserManager<User> userManager
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUser = await userManager.GetUserAsync(User);
}

@section Styles {
<link href="~/css/profilestyle.css" rel="stylesheet" />
}

<div class="container profile-container py-5">
    <div class="text-center mb-4">
        <div class="mb-3">
            <img src="~/UserPersonnalImages/@Model.Image"
            class="rounded-circle img-thumbnail shadow"
            width="130" height="130" alt="Profile Photo" />
        </div>
        <h2 class="mb-1">@Model.FirstName  @Model.LastName</h2>
        @if(Model.City is not null && Model.Governement is not null)
        {
            <p class="text-muted"><i class="fa-solid fa-location-dot me-2"></i>@Model.City, @Model.Governement</p>

        }
        @if (Model.Id == currentUser.Id)
        {
            <button class="btn btn-success me-2">Edit Profile</button>
        }
        <button class="btn btn-outline-success">Share Profile</button>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <p><i class="fa-solid fa-envelope me-2 text-success"></i><strong>Email:</strong> @Model.Email</p>
            <p><i class="fa-solid fa-phone me-2 text-success"></i><strong>Phone:</strong> @Model.Phone</p>
            <p><i class="fa-solid fa-calendar me-2 text-success"></i><strong>Joined:</strong> @Model.CreatedAt</p>
        </div>
    </div>

    <ul class="nav nav-pills justify-content-center mb-4">
        <li class="nav-item">
            <a class="nav-link active" href="#">Products</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">WishList</a>
        </li>
    </ul>

    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm p-3">
                <h5>Redesigning the User Experience</h5>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100 shadow-sm p-3">
                <h5>Color Theory in Digital Products</h5>
            </div>
        </div>
    </div>
</div>

@section Scripts {
}
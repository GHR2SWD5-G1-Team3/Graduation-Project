						</div>
					</div>
					<div class="position-absolute top-0 start-0 translate-middle">
						<div class="text-dark rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; background-color: #81c408;">
							<span class="fw-bold">NEW</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Marketplace Banner Section End -->

<!-- Bestsaler Product Start -->
<div class="container-fluid py-5">
	<div class="container py-5">
		<div class="text-center mx-auto mb-5" style="max-width: 700px;">
			<h1 class="display-4">Bestseller Products</h1>
			<p>Latin words, combined with a handful of model sentence structures, to generate Lorem Ipsum which looks reasonable.</p>
		</div>
		@if (Model.BestProducts != null && Model.BestProducts.Count > 0)
		{
			<div class="row g-4">
				@foreach (var item in Model.BestProducts)
				{
					<div class="col-lg-6 col-xl-4">
						<div class="p-4 rounded bg-light">
							<div class="row align-items-center">
								<div class="col-6">
									<img src="~/img/Products/@item.ImagePath" style="width:142px;height:142px" class="img-fluid rounded-circle w-100" alt="@item.Name">
								</div>
								<div class="col-6">
									<a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@item.Id" class="h5">Organic @item.Name</a>
									<div class="d-flex my-3">
										<i class="fas fa-star text-primary"></i>
										<i class="fas fa-star text-primary"></i>
										<i class="fas fa-star text-primary"></i>
										<i class="fas fa-star text-primary"></i>
										<i class="fas fa-star"></i>
									</div>
									<h4 class="mb-3">@item.UnitPrice $</h4>
									<button class="btn border border-secondary rounded-pill px-3 text-primary add-to-cart-btn"
											data-product-id="@item.Id"
											data-product-price="@item.UnitPrice"
											data-product-quantity="1">
										<i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart
									</button>
								</div>
							</div>
						</div>
					</div>
				}
			</div>
		}
		else
		{
			<div class="text-center py-5">
				<p class="text-muted">No bestseller products found.</p>
			</div>
		}
	</div>
</div>
<!--Best seller product end-->
@section Scripts {
	<script src="~/js/site.js"></script>
}



<form id="anti-forgery-form" style="display:none;">
	@Html.AntiForgeryToken()
</form>
<!-- Our Top Sellers Start-->
<div class="container-fluid vesitable py-5">
	<div class="container py-5">
		<h1 class="mb-0">Our Top Sellers</h1>
		@if (Model.TopProducts != null && Model.TopProducts.Count > 0)
		{
			<div class="owl-carousel vegetable-carousel justify-content-center">
				@foreach (var product in Model.TopProducts)
				{
					<div class="border border-primary rounded position-relative vesitable-item overflow-hidden">
						<!-- Product Image (clickable) -->
						<a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@product.Id"
						   class="text-decoration-none text-dark d-block">
							<div class="vesitable-img">
								<img src="~/img/Products/@product.ImagePath" style="width:258px;height:207px" class="img-fluid w-100 rounded-top" alt="@product.Name">
							</div>
						</a>

						<!-- Category Badge -->
						<div class="text-white bg-primary px-3 py-1 rounded position-absolute"
							 style="top: 10px; right: 10px;">
							@product.CategoryName
						</div>

						<!-- Product Info (clickable) -->
						<a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@product.Id"
						   class="text-decoration-none text-dark d-block">
							<div class="p-4 rounded-bottom">
								<h4>@product.Name</h4>
								<p>@product.Description</p>
								<p class="text-dark fs-5 fw-bold mb-3">
									$@product.UnitPrice.ToString("0.00") / kg
								</p>
							</div>
						</a>

						<!-- Add to Cart Button (separate clickable element) -->
						<div class="px-4 pb-4">
							<button class="btn border border-secondary rounded-pill px-3 text-primary add-to-cart-btn w-100"
									data-product-id="@product.Id"
									data-product-price="@product.UnitPrice"
									data-product-quantity="1">
								<i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart
							</button>
						</div>
					</div>
				}
			</div>
		}
		else
		{
			<div class="text-center py-5">
				<p class="text-muted">No products found.</p>
			</div>
		}
	</div>
</div>
<!-- Our Top Sellers End -->

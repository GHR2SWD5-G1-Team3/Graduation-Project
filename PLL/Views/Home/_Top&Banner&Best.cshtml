<!-- Our Top Sellers Start-->
<div class="container-fluid vesitable py-5">
	<div class="container py-5">
		<h1 class="mb-0">Our Top Sellers</h1>
		<div class="owl-carousel vegetable-carousel justify-content-center">
			@foreach (var product in Model.TopProducts)
			{
				<div class="border border-primary rounded position-relative vesitable-item overflow-hidden">
					<a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@product.Id"
					   class="text-decoration-none text-dark d-block h-100 w-100 p-0 m-0"
					   style="position: relative; z-index: 1;">

						<div class="vesitable-img">
							<img src="~/img/Products/@product.ImagePath" style="width:258px;height:207px" class="img-fluid w-100 rounded-top" alt="@product.Name">
						</div>

						<div class="text-white bg-primary px-3 py-1 rounded position-absolute"
							 style="top: 10px; right: 10px;">
							@product.CategoryName
						</div>

						<div class="p-4 rounded-bottom">
							<h4>@product.Name</h4>
							<p>@product.Description</p>

							<div class="d-flex flex-column align-items-start gap-2">
								<p class="text-dark fs-5 fw-bold mb-0">
									$@product.UnitPrice.ToString("0.00") / kg
								</p>

								<a asp-controller="CartDetails" asp-action="Create" asp-route-productId="@product.Id"
								   class="btn border border-secondary rounded-pill px-3 text-primary"
								   style="z-index: 3; position: relative;">
									<i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart
								</a>
							</div>
						</div>
					</a>
				</div>
			}
		</div>
	</div>
</div>
<!-- Our Top Sellers End -->

<!-- Banner Section Start-->
<div class="container-fluid banner bg-secondary my-5">
	<div class="container py-5">
		<div class="row g-4 align-items-center">
			<div class="col-lg-6">
				<div class="py-4">
					<h1 class="display-3 text-white">Fresh Exotic Fruits</h1>
					<p class="fw-normal display-3 text-dark mb-4">in Our Store</p>
					<p class="mb-4 text-dark">The generated Lorem Ipsum is therefore always free from repetition injected humour, or non-characteristic words etc.</p>
					<a href="#" class="banner-btn btn border-2 border-white rounded-pill text-dark py-3 px-5">BUY</a>
				</div>
			</div>
			<div class="col-lg-6">
				<div class="position-relative">
					<img src="img/baner-1.png" class="img-fluid w-100 rounded" alt="">
					<div class="d-flex align-items-center justify-content-center bg-white rounded-circle position-absolute" style="width: 140px; height: 140px; top: 0; left: 0;">
						<h1 style="font-size: 100px;">1</h1>
						<div class="d-flex flex-column">
							<span class="h2 mb-0">50$</span>
							<span class="h4 text-muted mb-0">kg</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Banner Section End -->

<!-- Bestsaler Product Start -->
<div class="container-fluid py-5">
	<div class="container py-5">
		<div class="text-center mx-auto mb-5" style="max-width: 700px;">
			<h1 class="display-4">Bestseller Products</h1>
			<p>Latin words, combined with a handful of model sentence structures, to generate Lorem Ipsum which looks reasonable.</p>
		</div>
		<div class="row g-4">
			@foreach (var item in Model.BestProducts)
			{
				<div class="col-lg-6 col-xl-4">
					<div class="p-4 rounded bg-light">
						<div class="row align-items-center">
							<div class="col-6">
								<img src="~/img/Products/@item.ImagePath" style="width:142px;height:142px" class="img-fluid rounded-circle w-100" alt="@item.Name">
							</div>
							<div class="col-6">
								<a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@item.Id" class="h5">Organic @item.Name </a>
								<div class="d-flex my-3">
									<i class="fas fa-star text-primary"></i>
									<i class="fas fa-star text-primary"></i>
									<i class="fas fa-star text-primary"></i>
									<i class="fas fa-star text-primary"></i>
									<i class="fas fa-star"></i>
								</div>
								<h4 class="mb-3">@item.UnitPrice $</h4>
								<a asp-action="Create" asp-controller="CartDetails" asp-route-productId="" class="btn border border-secondary rounded-pill px-3 text-primary">
									<i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart
								</a>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>
<!-- Bestsaler Product End -->